{
  "manifest_version": 2,
  "version": "1.1",
  "short_name": "Ghost Clean",
  "name": "Ghost Clean",
  "browser_specific_settings": {
    "gecko": {
      "id": "clear-everything@example.com"
    }
  },
  "icons": {
    "512": "img/Logo.png"
  },
  "permissions": [
    "history",
    "cookies",
    "browsingData",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "action": {
    "default_icon": {
      "512": "img/Logo.png"
    }
  }
}
